<%- include("../partials/header") %>

<!--<div class="container">-->
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Study Paradise</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= study_room.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Private Tutor<br><small>$10.00/hour</small></h4>
                    <h4><a><%=study_room.name%></a></h4>
                    <p><%= study_room.description %></p>
                    <p>
                        <em>Submitted By <%= study_room.author.username %></em>
                    </p>
                    <% if(currentUser && study_room.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/study_rooms/<%= study_room._id %>/edit">Edit</a>
                        <form class="delete-form" action="/study_rooms/<%= study_room._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/study_rooms/<%= study_room._id %>/comments/news">Add New Comment</a>
                </div>
                <hr>
                <% study_room.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning"
                                href="/study_rooms/<%=study_room._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/study_rooms/<%=study_room._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
<!--</div>-->

<%- include("../partials/footer") %>
